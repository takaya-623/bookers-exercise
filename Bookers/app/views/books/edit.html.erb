<body>
  <h1 class="editing_book">Editing Book</h1>
  
  <%= form_with model:@book, local:true do |f| %>
    <!--エラーメッセージ　ここから-->
    <% if @book.errors.any? %>
      <div class="error_explanation">
        <div class="error_head">
        <h2 class="error_head_text"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        </div>
        <ul class="error_message">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!--エラーメッセージ　ここまで    -->
      <div class="title_box">
        <p>
        <%= f.label :title, 'Title' %>
        </p>
        <%= f.text_field :title %>
      </div>
      <div class="body_box">
        <p>
        <%= f.label :body, 'Body' %>
        </p>
        <%= f.text_area :body %>
      </div>
      <div class="submit_button">
        <%= f.submit 'Update Book' %>
      </div>    
  <% end %>
  
  <%= link_to "Show", book_path(@book.id) %> <tt>|</tt>
  <%= link_to "Back", books_path %>
</body>
